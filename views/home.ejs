<%- include("./include/header"); -%>

<h1>Home</h1>
<P> <%= startingContent %> </P>

<%posts.forEach(post => { %>
    <h1><%=post.title%></h1>
    <%var myString = post.content%>
    <%var myTruncatedString = myString.substring(0, 100)%>
    <p><%=myTruncatedString%><a href="/posts/<%=post.title%>"> Read more</a> </p>
<%});%> 

<%- include("./include/footer"); -%>
